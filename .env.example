# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=change-me

# Encryption (used to encrypt/decrypt instagram_password in DB)
# If not set, the app derives a key from SECRET_KEY (changing SECRET_KEY will break decryption).
ENCRYPTION_KEY=

# Web server
HOST=0.0.0.0
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_SCHEMA=osintgram

# OpenAI
OPENAI_API_KEY=

# RSS feeds config (optional)
# Accepts JSON:
# 1) dict: {"dezeen": {"url": "https://...", "name": "...", "category": "...", "language": "en"}, ...}
# 2) list: ["https://example.com/feed.xml", "https://example.com/rss"]
RSS_FEEDS_JSON=

# Workers
# Run all-in-one: py -3.10 run_all.py
ENABLE_ALL_WORKERS=true
WORKERS_LOOP_SECONDS=60

# Individual runners (optional)
ENABLE_DM_ASSISTANT=false
DM_ASSISTANT_LOOP_SECONDS=45

ENABLE_INVITE_CAMPAIGN=false
INVITE_CAMPAIGN_LOOP_SECONDS=60

ENABLE_AUTOMATION=false
AUTOMATION_LOOP_SECONDS=60

# Automation (optional)
# Run the worker loop with: py -3.10 automation_runner.py
# (see also individual runner flags above)

# Media providers (optional, for future steps)
RUNWAY_API_KEY=
STABILITY_API_KEY=
LEONARDO_API_KEY=

# SaaS / Subscription gating
# If true, non-admin users must have an active Stripe subscription for paid features.
SAAS_REQUIRE_SUBSCRIPTION=false

# Comma-separated list of admin emails
ADMIN_EMAILS=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# Optional (override return URLs)
STRIPE_SUCCESS_URL=
STRIPE_CANCEL_URL=

# Render.com
RENDER_EXTERNAL_URL=

# Email (optional)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
